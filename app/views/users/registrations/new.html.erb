<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email,value: 'ایمیل' %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :name,value: 'نام کاربری' %><br />
    <%= f.text_field :name, autofocus: true,required: 'required' %>
  </div>
  <div class="field">
    <%= f.label :password,value: 'رمز عبور' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off",required: 'required' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,value: 'تایید رمز عبور' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",required: 'required' %>
  </div>
  <div class="field">
    <%= f.label :phone,value: 'شماره موبایل' %><br />
    <%= f.text_field :phone, autocomplete: "on",required: 'required' %>
  </div>
  <div class="actions">
    <%= f.submit "ثبت نام",class: 'waves-effect waves-light btn' %>
  </div>
<% end %>

