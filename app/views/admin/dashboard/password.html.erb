<style>
    .raidio_buttons p{
        float:right;
        clear: both;
    }
</style>
<main>

 <div class="row">
      <div class="col s12 m12">
          
        <div class="card-panel white">
        
        
           <% content_for :head do %>
          <%= toast(flash[:notice][1],4000,['red']) unless flash[:notice].nil? %>
        <% end %>
        
 <div class="row">
    <%= form_tag  admin_dashboard_update_password_path,html: {class: 'col s12'},method: :POST do  %>
     
    

        <br>
     
     
      
      <div class="row">
        <div class="input-field col s12">
          
          <%= password_field_tag :old_password,'' ,class: "materialize-textarea" %>
          <%= label_tag :old_password, 'رمزعبور فعلی' %>
        </div>
        
      </div>
      
       <div class="row">
        <div class="input-field col s12">
          
          <%= password_field_tag :password,'' ,class: "materialize-textarea" %>
          <%= label_tag :password, 'رمزعبور' %>
        </div>
        
      </div>
      
         <div class="row">
        <div class="input-field col s12">
          
          <%= password_field_tag :password_confirmation,'' ,class: "materialize-textarea" %>
          <%= label_tag :password_confirmation, 'رمزعبور' %>
        </div>
        
      </div>
      
    
      <div class="row">
      
        <%= button_tag :type => 'submit', :class => "waves-effect waves-light btn" do %>
         <i class="material-icons left">cloud</i>ارسال
        <% end %>
    

      </div>
      
      
      
      
    <% end %>
  </div>
        
        
        
            
            
          
          
        </div>
      </div>
 </div>

</main>