

<%# content_for :head do %>
  
  
<%# end %>
<main>

 <div class="row">
      <div class="col s12 m12">
          
        <div class="card-panel white">

        <table class='striped highlight bordered'>
            <thead>
              <tr>
                  <th>ویرایش</th>
                 
                  <th>لینک</th>
  <th>نام درخواست کننده</th>
              </tr>
            </thead>
    
            <tbody>
            <% @chains.each do |chain| %>
              <tr>
                <td>
                  <%= link_to(raw("<i class='material-icons'>#{chain.accept? ? 'lock_outline':'lock_open'}</i>"),toggle_lock_admin_seller_chain_path(chain.id),class: 'small btn-floating waves-effect btn-small waves-light green') %>
                </td>
                <td>
                  <% unless current_user.id == chain.user.id %>
                  <%= link_to chain.user.exposition_name,exposition_show_path(chain.user.identify),terget: '_blank' %>
                <% else %>
                <%= link_to User.find(chain.user_two).exposition_name,exposition_show_path(User.find(chain.user_two).identify),terget: '_blank' %>
                <% end %>
                </td>
                <td>
                  
                       <% unless current_user.id == chain.user.id %>
                           <%= chain.user.name %>
                <% else %>
                         <%= User.find(chain.user_two).name %>
                <% end %>
                
         
                
                
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
 </div>
 
</main>