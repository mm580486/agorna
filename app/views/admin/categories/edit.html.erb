
<main>

 <div class="row">
      <div class="col s12 m12">
          
        <div class="card-panel white">
        
        
        
        
        
 <div class="row">
    <% if @category.errors.full_messages.any? %>
      <% @category.errors.full_messages.each do |error_message| %>
        <% content_for :head do %>
          <%= toast(error_message,4000,['red']) %>
        <% end %>
      <% end %>
    <% end %>

    <%= form_for @category ,url: admin_category_path(@category),html: {class: 'col s12'}, method: :patch do |f| %>
      <div class="row">

        <div class="input-field col s12">
          <%= f.text_field :name,class: 'validate', required: "required" %>
          <%= f.label :name, 'نام دسته بندی' ,:'data-error' => "wrong", 'data-success'=> "" %>
        </div>
        
        <div class="input-field col s12">
          <%= f.text_field :permalink,class: 'validate', required: "required" %>
          <%= f.label :permalink, 'پرمالینک' ,:'data-error' => "wrong", 'data-success'=> "" %>
        </div>

      
     </div>
     
          <div class="row">
                            <div class="file-field input-field ">
      <div class="btn">
        <span>عکس</span>
        <%= f.file_field :image, multiple: false %>
      </div>
      <div class="file-path-wrapper">
        <input class="file-path validate" type="text">
      </div>
    </div>
    
     </div>
       
      <div class="row">
        <%= button_tag :type => 'submit', :class => "waves-effect waves-light btn" do %>
         <%= t('crud.create') %> <i class="material-icons right">cloud</i>
        <% end %>
        <%= link_to(raw('<i class="material-icons right">delete_forever</i>'+ t('crud.delete') ),delete_admin_category_path(@category),class: 'btn waves-effect waves-light red') %>
      </div>
      
      
      
      
    <% end %>
  </div>
        
        
        
            
            
          
          
        </div>
      </div>
 </div>

</main>